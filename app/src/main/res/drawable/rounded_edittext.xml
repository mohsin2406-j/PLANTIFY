<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#A8CAAC" /> <!-- Change to your desired color -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Optional border -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" /> <!-- Adjust radius for how rounded it is -->

    <!-- Padding (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
